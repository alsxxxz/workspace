package School;
import java.util.ArrayDeque;
import java.util.Arrays;
//1월 28일 오후 5시
public class BfsDfs {
	static final int[] di={-1,0,1,0};//상우하좌
	static final int[] dj={0,1,0,-1};
	
	static int N=5,C=0;
	static int[][] a;
	static boolean[][] v;
	
	static void bfs(int i,int j){
		ArrayDeque<int[]> q=new ArrayDeque<>();
		v[i][j]=true;
		q.offer(new int[]{i,j});
		while(!q.isEmpty()) {
			int[] ij=q.poll();
			i=ij[0];
			j=ij[1];
			a[i][j]=C++;
			for(int[] b:a) System.out.println(Arrays.toString(b)); System.out.println();
			for(int d=0; d<4; d++) {
				int ni=i+di[d];
				int nj=j+dj[d];
				if(0<=ni&&ni<N && 0<=nj&&nj<N && !v[ni][nj]) {
					v[ni][nj]=true;
					q.offer(new int[]{ni,nj});
				}
			}
		}
	}
	static void dfs(int i,int j){
		v[i][j]=true;
		a[i][j]=C++;
		for(int[] b:a) System.out.println(Arrays.toString(b)); System.out.println();
		for(int d=0; d<4; d++) {
			int ni=i+di[d];
			int nj=j+dj[d];
			if(0<=ni&&ni<N && 0<=nj&&nj<N && !v[ni][nj]) {
				dfs(ni,nj);
			}
		}
		//System.out.println(a[i][j]);
	}
	
	static void dfs1(int i,int j, int depth){
		if(depth>3) return;
		
		v[i][j]=true;
		a[i][j]=C++;
		System.out.println(depth);
		for(int[] b:a) System.out.println(Arrays.toString(b)); System.out.println();
		for(int d=0; d<4; d++) {
			int ni=i+di[d];
			int nj=j+dj[d];
			if(0<=ni&&ni<N && 0<=nj&&nj<N && !v[ni][nj]) {
				dfs1(ni,nj, depth+1);
			}
		}
		//System.out.println(a[i][j]);
	}
	static void bfs1(int i,int j, int depth){
		ArrayDeque<int[]> q=new ArrayDeque<>();
		v[i][j]=true;
		q.offer(new int[]{i,j, depth});
		while(!q.isEmpty()) {
			int[] ij=q.poll();
			i=ij[0];
			j=ij[1];
			depth = ij[2];
			a[i][j]=C++;
			System.out.println(depth);
			for(int[] b:a) System.out.println(Arrays.toString(b)); System.out.println();
			for(int d=0; d<4; d++) {
				int ni=i+di[d];
				int nj=j+dj[d];
				if(0<=ni&&ni<N && 0<=nj&&nj<N && !v[ni][nj]) {
					v[ni][nj]=true;
					q.offer(new int[]{ni,nj, depth+1});
				}
			}
		}
	}
	static void bfs1(int i,int j){
		ArrayDeque<int[]> q=new ArrayDeque<>();
		v[i][j]=true;
		q.offer(new int[]{i,j});
		int depth = 0;
		while(!q.isEmpty()) {
			int S = q.size();
			for(int s = 0; s<S; s++) {
		
				int[] ij=q.poll();
				i=ij[0];
				j=ij[1];
				a[i][j]=C++;
	
				for(int[] b:a) System.out.println(Arrays.toString(b)); System.out.println();
				for(int d=0; d<4; d++) {
					int ni=i+di[d];
					int nj=j+dj[d];
					if(0<=ni&&ni<N && 0<=nj&&nj<N && !v[ni][nj]) {
						v[ni][nj]=true;
						q.offer(new int[]{ni,nj});
				}
			}
			} depth++;
		
		
			}
	public static void main(String[] args) {
		a=new int[N][N];
		v=new boolean[N][N];
		C=1;
		//bfs(N/2,N/2); //5/2=2
		//dfs(N/2,N/2); //5/2=2
		
		//파라미터
		//bfs1(N/2, N/2);
		bfs1(N/2, N/2, 0);
		//dfs1(N/2, N/2, 0);
		
		//리턴
//		System.out.println(bfs2(N/2, N/2));
//		System.out.println(bfs2(N/2, N/2,0));
	}
	}






